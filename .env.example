# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration (MariaDB)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=thunder_orders
DB_USER=root
DB_PASSWORD=your-database-password

# Email Configuration (SMTP - Hostinger)
MAIL_SERVER=smtp.hostinger.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=noreply@thunderorders.cloud
MAIL_PASSWORD=your-email-password-here
MAIL_DEFAULT_SENDER=noreply@thunderorders.cloud

# Exchange Rate API (Optional)
# If not provided, will use NBP API (no key required)
EXCHANGE_RATE_API_KEY=your-api-key-here

# Google Analytics 4 (GA4)
# Format: G-XXXXXXXXXX
# Leave empty to disable analytics (development)
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Session Configuration
SESSION_LIFETIME=604800

# Upload Configuration
MAX_UPLOAD_SIZE=10485760
