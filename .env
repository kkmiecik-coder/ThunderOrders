# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=thunderorders-dev-secret-key-2025-change-in-production

# Database Configuration (MariaDB via XAMPP)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=thunder_orders
DB_USER=root
DB_PASSWORD=

# Email Configuration (SMTP)
# Note: Można też konfigurować przez Settings w panelu admin
# Zostaw puste na razie - skonfigurujemy później
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@thunderorders.pl

# Exchange Rate API (Optional)
# If not provided, will use NBP API (no key required)
EXCHANGE_RATE_API_KEY=

# Session Configuration
SESSION_LIFETIME=604800

# Upload Configuration
MAX_UPLOAD_SIZE=10485760
